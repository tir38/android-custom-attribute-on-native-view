<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/basic_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="basic text view"/>

    <com.tir38.android.customattrib.MyCustomView
        android:id="@+id/custom_text_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:myCustomAttrib="true"
        android:text="custom text view: true"/>

    <com.tir38.android.customattrib.MyCustomView
        android:id="@+id/custom_text_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:myCustomAttrib="false"
        android:text="custom text view: false"/>

    <TextView
        android:id="@+id/basic_text_view_with_custom_attribute_true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:myCustomAttrib="true"
        android:text="basic text view with custom attrib: true"/>

    <TextView
        android:id="@+id/basic_text_view_with_custom_attribute_false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:myCustomAttrib="false"
        android:text="basic text view with custom attrib: false"/>

</LinearLayout>
